<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.Carrie.challengersproject.src.CertifiyFinish.CertifyFinishActivity">

    <FrameLayout
        android:id="@+id/certify_finish_fl_image_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/a_certify_img"
        android:scaleType="fitXY">

        <TextView
            android:id="@+id/certify_finish_tv_now_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.09.11(금) 17:10:35"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="right|bottom"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/certify_finish_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/certify_finish_fl_image_view"
        app:layout_constraintLeft_toLeftOf="certify_finish_fl_image_view"
        android:layout_marginTop="20dp"
        android:src="@drawable/mainicon64"/>

    <TextView
        android:id="@+id/certify_finish_text_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작은 습관들이 모이면 인생이 달라집니다."
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@id/certify_finish_iv_icon"
        app:layout_constraintLeft_toRightOf="@id/certify_finish_iv_icon"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/certify_finish_text_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/certify_finish_text_line1"
        app:layout_constraintLeft_toLeftOf="@id/certify_finish_text_line1"
        android:text="한번도 놓지지 않고 1회 연속 달성"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        android:background="@color/colorAccent"/>

    <View
        android:id="@+id/certify_finish_v_line1"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/certify_finish_iv_icon"
        android:layout_marginTop="10dp"
        android:background="@color/colorGrayPressed"/>

    <TextView
        android:id="@+id/certify_finish_tv_get_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/certify_finish_iv_icon"
        app:layout_constraintTop_toBottomOf="@id/certify_finish_v_line1"
        android:text="경험치 25을(를) 획득하셨습니다."
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/certify_finish_tv_get_point_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/certify_finish_tv_get_point"
        app:layout_constraintLeft_toLeftOf="@id/certify_finish_tv_get_point"
        android:text="*실제 경험치는 챌린지 종료시 한 번에 모아서 지급됩니다."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="11sp"
        android:layout_marginTop="5dp"/>

    <View
        android:id="@+id/certify_finish_v_line2"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/certify_finish_tv_get_point_explain"
        android:layout_marginTop="20dp"
        android:background="@color/colorGrayPressed"/>

    <TextView
        android:id="@+id/certify_finish_tv_refund_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/certify_finish_tv_get_point"
        app:layout_constraintTop_toBottomOf="@id/certify_finish_v_line2"
        android:text="0원의 참가비가 환급되었습니다."
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/certify_finish_tv_refund_point_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/certify_finish_tv_refund_point"
        app:layout_constraintLeft_toLeftOf="@id/certify_finish_tv_refund_point"
        android:text="*실제 환급은 챌린지 종료시 한 번에 모아서 지급됩니다"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="11sp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/certify_finish_tv_refund_point_explain2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/certify_finish_tv_refund_point_explain"
        app:layout_constraintLeft_toLeftOf="@id/certify_finish_tv_refund_point_explain"
        android:text="*인증샷이 제대로 업로드 되었는지 확인해 주세요."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="11sp"/>

    <View
        android:id="@+id/certify_finish_v_line3"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/certify_finish_tv_refund_point_explain2"
        android:layout_marginTop="20dp"
        android:background="@color/colorGrayPressed"/>

    <TextView
        android:id="@+id/certify_finish_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/certify_finish_v_line3"
        android:background="@drawable/primarycolor_selector_more_square"
        android:text="확인"
        android:gravity="center"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>

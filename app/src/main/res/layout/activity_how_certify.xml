<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.Carrie.challengersproject.src.HowCertify.HowCertifyActivity">

    <TextView
        android:id="@+id/how_certify_tv_btn_camera"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:background="@drawable/primarycolor_selector_more_square"
        android:text="인증샷 찍기"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/how_certify_tv_btn_camera">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/how_certify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증방법"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/how_certify_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/how_certify"
                app:layout_constraintTop_toTopOf="@id/how_certify"
                app:layout_constraintBottom_toBottomOf="@id/how_certify"
                android:layout_marginLeft="15dp"
                android:text="9/9/수 - 9/9/수"
                android:padding="5dp"
                android:textSize="11sp"
                android:gravity="center"
                android:background="@color/colorGrayPressed"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/how_certify_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/how_certify"
                app:layout_constraintTop_toBottomOf="@id/how_certify"
                android:text="오늘 혹은 내일 날짜와 할 일 3가지를 적은 손글씨 사진 찍기"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/how_certify_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/how_certify_detail"
                android:background="@color/colorGrayPressed"/>

            <LinearLayout
                android:id="@+id/how_certify_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/how_certify_line1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"
                android:orientation="vertical"
                android:layout_marginRight="35dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="인증 가능 요일"
                        android:textColor="@color/colorGray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="월"
                        android:layout_marginLeft="50dp"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="인증 빈도"
                        android:textColor="@color/colorGray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="매일"
                        android:layout_marginLeft="80dp"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="인증 가능 시간"
                        android:textColor="@color/colorGray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="24시간"
                        android:layout_marginLeft="50dp"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="하루 인증 횟수"
                        android:textColor="@color/colorGray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="1번"
                        android:layout_marginLeft="50dp"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="인증샷 간격"
                        android:textColor="@color/colorGray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="제한 없음"
                        android:layout_marginLeft="65dp"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="사진첩 사용"
                        android:textColor="@color/colorGray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="불가능"
                        android:layout_marginLeft="65dp"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="인증샷 공개"
                        android:textColor="@color/colorGray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="참가자만 공개"
                        android:layout_marginLeft="65dp"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/how_certify_pic_like_this"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                app:layout_constraintLeft_toLeftOf="@id/how_certify"
                app:layout_constraintTop_toBottomOf="@id/how_certify_ll"
                android:layout_marginTop="60dp"
                android:text="이렇게 찍어주세요!"/>

            <ImageView
                android:id="@+id/how_certify_pic_iv"
                app:layout_constraintTop_toBottomOf="@id/how_certify_pic_like_this"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="@id/how_certify_pic_like_this"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                android:src="@drawable/b_certify"/>

            <TextView
                android:id="@+id/how_certify_pic_explain"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/how_certify_pic_iv"
                app:layout_constraintLeft_toLeftOf="@id/how_certify_pic_iv"
                android:text="오늘 혹은 내일 날짜와 할 일 3가지를 적은 손글씨 사진 찍기"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/how_certify_pic_not_like_this"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                app:layout_constraintLeft_toLeftOf="@id/how_certify"
                app:layout_constraintTop_toBottomOf="@id/how_certify_pic_explain"
                android:layout_marginTop="25dp"
                android:text="이렇게 하면 안돼요!"/>


            <FrameLayout
                android:id="@+id/how_certify_not_pic_iv"
                app:layout_constraintTop_toBottomOf="@id/how_certify_pic_not_like_this"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="@id/how_certify_pic_not_like_this"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                android:background="@drawable/b_certify">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="#ff0000"
                    android:gravity="center"
                    android:text="RED CARD"
                    android:textSize="6sp"
                    android:textStyle="bold"
                    android:padding ="3dp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/how_certify_not_pic_explain"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/how_certify_not_pic_iv"
                app:layout_constraintLeft_toLeftOf="@id/how_certify_not_pic_iv"
                android:text="중복 사용 방지를 위해 내일 날짜를 적어주셔야 합니다."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:layout_marginTop="10dp"/>

            <FrameLayout
                android:id="@+id/how_certify_not_pic_iv_1"
                app:layout_constraintTop_toBottomOf="@id/how_certify_pic_not_like_this"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toRightOf="@id/how_certify_pic_not_like_this"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="40dp"
                android:background="@drawable/b_certify">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="#ff0000"
                    android:gravity="center"
                    android:text="RED CARD"
                    android:textSize="6sp"
                    android:textStyle="bold"
                    android:padding ="3dp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/how_certify_not_pic_explain_1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/how_certify_not_pic_iv_1"
                app:layout_constraintLeft_toLeftOf="@id/how_certify_not_pic_iv_1"
                android:text="할 일은 꼭 3개 이상 적어주셔야 합니다."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/how_certify_alert_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/how_certify_not_pic_iv"
                app:layout_constraintTop_toBottomOf="@id/how_certify_not_pic_explain"
                android:textColor="@color/colorPrimary"
                android:text="인증규정을 지키지 않을 경우 레드카드가 발급될 수 있습니다."
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/how_certify_show_detail_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/how_certify_alert_msg"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="자세히 보기"
                android:textStyle="bold"
                android:background="@color/colorPrimaryPressed"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="15dp"
                android:gravity="center"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/how_certify_show_detail_btn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/redcard"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

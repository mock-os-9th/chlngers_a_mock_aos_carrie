<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/change_nickname_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임 변경"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"/>

    <ImageButton
        android:id="@+id/change_nickname_ib_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_chevron_left_black_24dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/change_nickname_tv_explain_what_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/change_nickname_tv_title"
        app:layout_constraintLeft_toLeftOf="@id/change_nickname_ib_back_btn"
        android:text="변경할 닉네임을 입력해주세요 (3~15자)"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/change_nickname_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="  닉네임"
        android:textColorHint="@color/colorGrayPressed"
        android:textSize="14sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/gray_edit_text"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/change_nickname_tv_explain_what_enter"/>

    <TextView
        android:id="@+id/change_nickname_alert_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@id/change_nickname_et"
        app:layout_constraintLeft_toLeftOf="@id/change_nickname_et"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="3dp"
        android:text=""/>



    <Button
        android:id="@+id/change_nickname_change_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@id/change_nickname_et"
        android:stateListAnimator="@null"
        android:layout_marginTop="60dp"
        android:background="@drawable/primarycolor_selector_more_square"
        android:text="변경하기"
        android:textColor="@color/colorAccent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
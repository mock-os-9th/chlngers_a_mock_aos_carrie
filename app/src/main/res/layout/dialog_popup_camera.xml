<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="340dp"
    android:orientation="vertical"
    android:background="@drawable/background_round_shape_white">

    <TextView
        android:id="@+id/dialog_popup_camera_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/colorPrimary"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        tools:text="인증하기" />
    <ImageView
        android:id="@+id/dialog_popup_camera_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:layout_width="80dp"
        android:layout_marginRight="25dp"
        app:srcCompat="@drawable/ic_center_focus_weak_black_24dp" />

    <TextView
        android:id="@+id/dialog_popup_camera_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/dialog_popup_camera_title1"
        app:layout_constraintBottom_toBottomOf="@id/dialog_popup_camera_iv"
        android:text="참가하고 있는 챌린지가 있는 경우,"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/dialog_popup_camera_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/dialog_popup_camera_title1"
        app:layout_constraintTop_toBottomOf="@id/dialog_popup_camera_line1"
        android:text="챌린지 카드가 생깁니다."
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="2dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/dialog_popup_camera_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/dialog_popup_camera_title1"
        app:layout_constraintTop_toBottomOf="@id/dialog_popup_camera_line2"
        android:text="챌린지에 따라, 인증 가능 시간이 되면"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/dialog_popup_camera_line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/dialog_popup_camera_title1"
        app:layout_constraintTop_toBottomOf="@id/dialog_popup_camera_line3"
        android:text="인증 카메라 버튼이 활성화 됩니다."
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="2dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/dialog_popup_camera_btn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증 카메라 버튼"
        app:layout_constraintTop_toBottomOf="@id/dialog_popup_camera_line4"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="12sp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_popup_camera_btn_tv"
        app:srcCompat="@drawable/ic_camera_alt_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



    <Button
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="30dp"
        android:id="@+id/dialog_popup_camera_exit_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bottom_round_primary_color_more_square"
        android:layout_gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="계속 둘러보기"
        android:textColor="@android:color/white"
        android:textSize="17sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="340dp"
    android:orientation="vertical"
    android:background="@drawable/background_round_shape_white">

    <TextView
        android:id="@+id/dialog_popup_feed_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/colorPrimary"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        tools:text="피드보기." />
    <ImageView
        android:id="@+id/dialog_popup_feed_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:layout_width="80dp"
        android:layout_marginRight="25dp"
        app:srcCompat="@drawable/ic_filter_none_black_24dp" />

    <TextView
        android:id="@+id/dialog_popup_feed_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/dialog_popup_feed_title1"
        app:layout_constraintTop_toBottomOf="@id/dialog_popup_feed_title1"
        android:layout_marginTop="30dp"
        android:text="다른 사람들의"
        android:layout_marginBottom="10dp"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/dialog_popup_feed_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/dialog_popup_feed_title1"
        app:layout_constraintTop_toBottomOf="@id/dialog_popup_feed_line1"
        android:text="인증샷을 볼 수 있어요."
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="3dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/dialog_popup_feed_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/dialog_popup_feed_title1"
        app:layout_constraintTop_toBottomOf="@id/dialog_popup_feed_line2"
        android:text="다른 사람들은 어떤 목표를 하는지"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/dialog_popup_feed_line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/dialog_popup_feed_title1"
        app:layout_constraintTop_toBottomOf="@id/dialog_popup_feed_line3"
        android:text="같은 목표를 하는 사람들은 얼마나 열심히 하는지"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="3dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/dialog_popup_feed_line5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/dialog_popup_feed_title1"
        app:layout_constraintTop_toBottomOf="@id/dialog_popup_feed_line4"
        android:text="자극을 주고 받으며,"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="3dp"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/dialog_popup_feed_line6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/dialog_popup_feed_title1"
        app:layout_constraintTop_toBottomOf="@id/dialog_popup_feed_line5"
        android:text="목표 달성을 위한 페이스메이커가 됩니다."
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="3dp"
        android:textSize="12sp"/>


    <Button
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="30dp"
        android:id="@+id/dialog_popup_feed_exit_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bottom_round_primary_color_more_square"
        android:layout_gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="계속 둘러보기"
        android:textColor="@android:color/white"
        android:textSize="17sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



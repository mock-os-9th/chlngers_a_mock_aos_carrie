<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp">

    <ImageView
        android:id="@+id/follow_item_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/profile"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/follow_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해당 사람 이름"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toRightOf="@+id/follow_item_iv"
        app:layout_constraintTop_toTopOf="@+id/follow_item_iv"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/follow_item_iv"/>

    <ImageButton
        android:id="@+id/follow_item_more_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_more_horiz_black_24dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@+id/follow_item_iv"
        app:layout_constraintBottom_toBottomOf="@+id/follow_item_iv"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/follow_item_follow_btn"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:background="@drawable/primarycolor_selector_more_square"
        android:text="@string/to_follow"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/follow_item_more_btn"
        app:layout_constraintTop_toTopOf="@id/follow_item_iv"
        app:layout_constraintBottom_toBottomOf="@id/follow_item_iv"
        android:layout_marginRight="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
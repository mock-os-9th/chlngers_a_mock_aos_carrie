<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/change_profileimg_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 사진 변경"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/change_profileimg_tv_cancle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/change_profileimg_tv_title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/change_profileimg_tv_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/change_profileimg_tv_title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:layout_marginRight="10dp"/>

    <View
        android:id="@+id/change_profileimg_v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/change_profileimg_tv_title"
        android:background="@color/colorGray"/>

    <ImageView
        android:id="@+id/change_profileimg_iv_Img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/profile80"
        app:layout_constraintTop_toBottomOf="@id/change_profileimg_v_line"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/change_profileimg_tv_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/change_profileimg_iv_Img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/change_profileimg_btn_photo_album"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/change_profileimg_tv_delete_btn"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="사진첩"
        android:layout_marginTop="100dp"
        android:background="@drawable/primarycolor_selector_more_square"/>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/change_introduce_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소개 변경"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"/>

    <ImageButton
        android:id="@+id/change_introduce_ib_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_chevron_left_black_24dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/change_introduce_tv_complete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/change_introduce_tv_title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/change_introduce_et"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/change_introduce_tv_title"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="45dp"
        android:paddingHorizontal="15dp"
        android:textSize="11sp"
        android:hint="본인 소개를 입력해주세요."
        android:gravity="left|top"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGrayPressed" />

    <View
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/change_introduce_et"
        android:background="@color/colorGrayPressed"/>



</androidx.constraintlayout.widget.ConstraintLayout>
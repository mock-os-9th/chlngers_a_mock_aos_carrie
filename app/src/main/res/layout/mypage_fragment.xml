<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/myPage_fragment_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mypage_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="15dp"/>
    <ImageButton
        android:id="@+id/myPage_fragment_ib_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_c_setting_selector"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/myPage_fragment_tv_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp" />

<!--    swiperefresh Layout 추가 필요 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/myPage_fragment_ib_setting"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/myPage_fragment_iv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/myPage_fragment_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/myPage_fragment_iv_profile"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:text="닉네임"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"/>

            <FrameLayout
                android:id="@+id/myPage_fragment_fL_contain_cash_win"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@drawable/cashwish_selector"
                app:layout_constraintTop_toBottomOf="@id/myPage_fragment_tv_nickname"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/myPage_fragment_tv_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_cash"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:id="@+id/myPage_fragment_tv_wincash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mapage_wincash"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="4dp"/>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/myPage_fragmnet_lL_contain_button3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/myPage_fragment_fL_contain_cash_win"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/myPage_fragment_btn_level"
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_level"
                    android:textSize="11sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableTop="@drawable/ic_stop_black_24dp"
                    android:drawableTint="@color/colorPrimary"
                    android:background="@color/colorAccent"/>
                <Button
                    android:id="@+id/myPage_fragment_btn_follower"
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_followers"
                    android:textSize="11sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableTop="@drawable/ic_stop_black_24dp"
                    android:background="@color/colorAccent"/>
                <Button
                    android:id="@+id/myPage_fragment_btn_following"
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_follwing"
                    android:textSize="11sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableTop="@drawable/ic_stop_black_24dp"
                    android:background="@color/colorAccent"/>

            </LinearLayout>

            <View
                android:id="@+id/myPage_fragment_view1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@id/myPage_fragmnet_lL_contain_button3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/colorGrayPressed"
                />

            <TextView
                android:id="@+id/myPage_fragment_tv_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypage_favorite"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/myPage_fragment_view1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/myPage_fragment_tv_btn_show_challenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypage_seechallege"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/myPage_fragment_tv_favorite"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/myPage_fragment_tv_list_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/myPage_fragment_tv_favorite"
                app:layout_constraintLeft_toLeftOf="@id/myPage_fragment_tv_favorite"
                android:layout_marginTop="10dp"
                android:text="#돈 관리, #일찍 일어나기"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"/>

            <View
                android:id="@+id/empty_1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@id/myPage_fragment_tv_list_favorite"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <View
                android:id="@+id/myPage_fragment_view2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@id/empty_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/colorGrayPressed"
                />

            <TextView
                android:id="@+id/myPage_fragment_tv_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypage_getbadge"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/myPage_fragment_view2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/myPage_fragment_tv_badge_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypage_showdetail"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/myPage_fragment_tv_badge"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:id="@+id/myPage_fragment_lL_badge_8"
                app:layout_constraintTop_toBottomOf="@id/myPage_fragment_tv_badge"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/myPage_fragment_iv_1row_1col"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/graycircle"/>
                    <ImageView
                        android:id="@+id/myPage_fragment_iv_1row_2col"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/graycircle"/>
                    <ImageView
                        android:id="@+id/myPage_fragment_iv_1row_3col"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/graycircle"/>
                    <ImageView
                        android:id="@+id/myPage_fragment_iv_1row_4col"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/graycircle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/myPage_fragment_iv_2row_1col"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/graycircle"/>
                    <ImageView
                        android:id="@+id/myPage_fragment_iv_2row_2col"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/graycircle"/>
                    <ImageView
                        android:id="@+id/myPage_fragment_iv_2row_3col"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/graycircle"/>
                    <ImageView
                        android:id="@+id/myPage_fragment_iv_2row_4col"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/graycircle"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/empty_2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/myPage_fragment_lL_badge_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <View
                android:id="@+id/empty_3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@id/empty_2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/colorGrayPressed"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/myPage_fragment_tv_habit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypage_gethabit"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/empty_3"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/myPage_fragment_tv_habit_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypage_showdetail"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/myPage_fragment_tv_habit"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="10dp"/>

            <com.github.mikephil.charting.charts.RadarChart
                android:id="@+id/myPage_fragment_radarChart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/myPage_fragment_tv_habit"/>

            <View
                android:id="@+id/empty_4"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@id/myPage_fragment_radarChart"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/colorGrayPressed"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/myPage_fragment_tv_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypage_write_everyday"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/empty_4"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/myPage_fragment_tv_see_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypage_see_report"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/myPage_fragment_tv_daily"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="10dp"/>

            <CalendarView
                android:id="@+id/myPage_fragment_cv_calender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/myPage_fragment_tv_daily"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:theme="@style/CalendarViewTheme"
                />

            <View
                android:id="@+id/empty_5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/myPage_fragment_cv_calender"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/colorGrayPressed"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
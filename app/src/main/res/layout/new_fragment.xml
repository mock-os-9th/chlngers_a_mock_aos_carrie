        android:id="@+id/new_fm_exercise_left_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09/14/월 - 09/28/월"
        android:textColor="@color/colorGray"
        android:background="@color/colorGrayPressed"
        app:layout_constraintTop_toBottomOf="@id/new_fm_exercise_left_star"
        app:layout_constraintLeft_toLeftOf="@id/new_fm_exercise_left_star"

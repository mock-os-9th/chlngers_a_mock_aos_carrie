        android:padding="5dp"/>

    <TextView
        android:id="@+id/new_fm_exercise_left_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2주"
        android:textColor="@color/colorGray"
        android:background="@color/colorGrayPressed"
        app:layout_constraintTop_toBottomOf="@id/new_fm_exercise_left_star"
        app:layout_constraintLeft_toRightOf="@id/new_fm_exercise_left_period"
        android:layout_marginTop="10dp"
        android:textSize="6sp"
        android:layout_marginLeft="5dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/new_fm_exercise_left_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주 3일"
        android:textColor="@color/colorGray"
        android:background="@color/colorGrayPressed"
